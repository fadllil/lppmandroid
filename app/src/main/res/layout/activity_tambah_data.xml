<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_blue_secondary"
    tools:context=".admin.TambahDataActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_white_primary"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/Linear_btn">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Indo"
                android:textSize="18dp"
                android:textColor="@color/blackPrimary"
                android:fontFamily="@font/mmedium"/>
            <EditText
                android:id="@+id/edt_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Judul"
                android:padding="5dp"
                android:background="@drawable/background_gray_secondary"
                android:inputType="text"
                android:textSize="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Keterangan"
                android:textColor="@color/blackPrimary"
                android:fontFamily="@font/mmedium"/>

            <EditText
                android:id="@+id/edt_keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Keterangan"
                android:inputType="text|textMultiLine"
                android:lines="5"
                android:padding="5dp"
                android:background="@drawable/background_gray_secondary"
                android:textSize="16dp"
                android:gravity="top"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btn_pilih_file"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Pilih File"
                android:layout_marginBottom="5dp"
                android:textColor="@color/whitePrimary"
                android:background="@drawable/background_blue_primary"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/Linear_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/cv2">

        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:textColor="@color/whitePrimary"
            android:background="@drawable/background_green_primary"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>